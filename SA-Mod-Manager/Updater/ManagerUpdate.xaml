<Window x:Class="SAModManager.Updater.ManagerUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAModManager.Updater"
        mc:Ignorable="d" Style="{StaticResource SAWindow}"
        Title="Manager Update" Height="200" Width="500"
         WindowStartupLocation="CenterScreen">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo ProgressState="Normal"/>
    </Window.TaskbarItemInfo>
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<TextBlock x:Name="UpdateTitle" VerticalAlignment="Top"  Text="Mod Manager Update" FontSize="24" Margin="10,15,10,0" TextWrapping="Wrap"/>
        <TextBlock x:Name="UpdateInfo" VerticalAlignment="Bottom" FontSize="18" Margin="10,0,10,0" TextWrapping="Wrap"/>

        <ProgressBar x:Name="UpdateProgress" Grid.Row="1" Maximum="1" VerticalAlignment="Center" Height="50" Margin="10,0,10,0"/>
	</Grid>
</Window>
